<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Teacher.
    -->
    <changeSet id="20200930095445-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="teacher_id_id"
                                 baseTableName="teacher"
                                 constraintName="fk_teacher_teacher_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

        <addForeignKeyConstraint baseColumnNames="teacher_id"
                                 baseTableName="teacher_subject"
                                 constraintName="fk_teacher_subject_teacher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teacher"/>

        <addForeignKeyConstraint baseColumnNames="subject_id"
                                 baseTableName="teacher_subject"
                                 constraintName="fk_teacher_subject_subject_id"
                                 referencedColumnNames="id"
                                 referencedTableName="subject"/>
        
        <addForeignKeyConstraint baseColumnNames="teacher_id"
                                 baseTableName="teacher_course"
                                 constraintName="fk_teacher_course_teacher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teacher"/>

        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="teacher_course"
                                 constraintName="fk_teacher_course_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"/>
        
    </changeSet>
</databaseChangeLog>
